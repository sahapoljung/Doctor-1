<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/aa_main"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DocTorActivity">
    <!--ConTent-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--TooBar-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarDoctor"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>
        <!--Frangment-->
        <FrameLayout
            android:id="@+id/contentDoctorFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!--android:layout_gravity="start"-->
    <!--Drawar Manu-->
    <LinearLayout
        android:padding="@dimen/h3"
        android:background="#53857c"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:layout_width="320dp"
        android:layout_height="match_parent">

        <!--Title-->
        <TextView

            android:textColor="@color/colorPrimaryy"
            android:layout_marginBottom="@dimen/h1"
            android:textStyle="bold"
            android:textSize="@dimen/m1"
            android:text="Main Manu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--About Me-->
        <LinearLayout
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@color/colorPrimaryy"
                android:src="@drawable/ic_action_aboutme"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/colorPrimaryy"
                android:textSize="@dimen/h1"
                android:clickable="true"
                android:id="@+id/txtAboutMe"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:text="Home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <!--วินัจฉัย-->
        <LinearLayout
            android:layout_marginBottom="8dp"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@color/colorPrimaryy"
                android:src="@drawable/ic_action_analysis"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/colorPrimaryy"
                android:textSize="@dimen/h1"
                android:clickable="true"
                android:id="@+id/txtAnalysis"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:text="@string/anlysis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <!--ข้อมูลโรค-->
        <LinearLayout

            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@color/colorPrimaryy"
                android:src="@drawable/ic_action_sick"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/colorPrimaryy"
                android:textSize="@dimen/h1"
                android:id="@+id/txtdatasick"
                android:clickable="true"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:text="@string/sick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <!--ข้อมูลอาการ-->

        <LinearLayout

            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@color/colorPrimaryy"
                android:src="@drawable/ic_action_sickdata"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/colorPrimaryy"
                android:textSize="@dimen/h1"
                android:id="@+id/txtsickdata"
                android:clickable="true"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:text="@string/sickdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <!--info User -->
        <LinearLayout
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@color/colorPrimaryy"
                android:src="@drawable/ic_action_info"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/colorPrimaryy"
                android:textSize="@dimen/h1"
                android:id="@+id/txtInfo"
                android:clickable="true"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:text="Info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <!--Log out-->
        <LinearLayout
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@color/colorPrimaryy"
                android:src="@drawable/ic_action_logout"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/colorPrimaryy"
                android:textSize="@dimen/h1"
                android:id="@+id/txtLogout"
                android:clickable="true"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:text="LogOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



    </LinearLayout>

</android.support.v4.widget.DrawerLayout>